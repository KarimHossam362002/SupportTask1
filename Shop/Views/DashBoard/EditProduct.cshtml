@model Product
@{
    Layout = "_DashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form asp-action="EditProduct" class="row" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="Name"
                           value="@Model.Name"
                           class="form-control"
                           placeholder="" />

                </div>
                <div class="mb-3">
                    <label class="form-label">Product Description</label>
                    <textarea type="text"                      
                              asp-for="Description"                             
                              id=""
                              class="form-control"
                              placeholder="">
                          @Model.Description
                          </textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="Quantity"
                           value="@Model.Quantity"
                           id=""
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="Price"
                           value="@Model.Price"
                           id=""
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="EnableSize" class="form-check-input" type="checkbox" value="@Model.EnableSize" id="" />
                        <label class="form-check-label" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    
                    <label class="form-label">company</label>
                    <select class="form-select "
                            asp-for="company.Id"
                            id="">
                        
                        @{
                            if (Model.company.Id == 1)
                        {
                            
                            <option>Select one</option>
                            <option selected value="1">nike</option>
                            <option value="2">adidas</option>
                            }
                            else if (Model.company.Id == 2)
                            {
                                
                                <option>Select one</option>
                                <option value="1">nike</option>
                                <option selected value="2">adidas</option>
                            }
                            else
                            {
                                
                                <option selected>Select one</option>
                                <option value="1">nike</option>
                                <option value="2">adidas</option>
                            }
                        }
                       
                    </select>
                </div>

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>