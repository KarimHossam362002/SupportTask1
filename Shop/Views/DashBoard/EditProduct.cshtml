@model Shop.ViewModel.ProductViewModel
@{
    Layout = "_DashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Editing Product</span>
        </div>

        <div>
            <form asp-action="EditProduct" class="row" method="post">
                <input hidden disabled asp-for="product.Id" />
                
                    <div class="mb-3">
                    <label class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="product.Name"
                           value="@Model.product.Name"
                           class="form-control"
                           placeholder="" />

                </div>

                
                

                <div class="mb-3">
                    <label class="form-label">Product Description</label>
                    <textarea type="text"                      
                              asp-for="product.Description"
                              id=""
                              class="form-control"
                              placeholder="">
                        @Model.product.Description
                          </textarea>
                </div>
                <div class="mb-3 col-lg-6">
                    <label class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="product.Quantity"
                           id=""
                           value="@Model.product.Quantity"
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-6">
                    <label class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="product.Price"
                           value="@Model.product.Price"
                           id=""
                           class="form-control"
                           placeholder=""></input>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="product.EnableSize" class="form-check-input" type="checkbox" id="" />
                        <label class="form-check-label" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    
                    <label class="form-label">company</label>
                    <select class="form-select "
                            asp-for="product.CompanyId"
                            id="">
                        <option selected>Select one</option>
                        @foreach (var com in Model.companies)
                        {
                            <option value="@com.Id">@com.Name</option>
                        }

                    </select>
                </div>

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>