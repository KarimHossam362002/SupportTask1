@model Shop.ViewModel.ProductViewModel
@{
	Layout = "_DashBoardLayout";
}
<div class="dash-content">
    <div class="overview">
        @if (ViewBag.Create != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.Create
            </div>
        }
        <div class="title">
            <i class="uil uil-tachometer-fast-alt"></i>
            <span class="text">Adding Product</span>
        </div>

        <div>
            <form asp-action="Create" class="row" method="post">
                @* <input type="hidden" asp-for="Id" /> *@
                <div class="mb-3">
                    <label asp-for="product.Name" class="form-label">Product Name</label>
                    <input type="text"
                           asp-for="product.Name"
                           
                           class="form-control"
                           placeholder="" />
                    <span asp-validation-for="product.Name" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="product.Description" class="form-label">Product Description</label>
                    <textarea type="text"
                              asp-for="product.Description"
                              id=""
                              class="form-control"
                              placeholder=""></textarea>
                    <span asp-validation-for="product.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.Quantity" class="form-label">Product Quantity</label>
                    <input type="number"
                           asp-for="product.Quantity"
                           id=""
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="product.Quantity" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-6">
                    <label asp-for="product.Price" class="form-label">Product Price</label>
                    <input type="number"
                           asp-for="product.Price"
                           id=""
                           class="form-control"
                           placeholder=""></input>
                    <span asp-validation-for="product.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
                    <div class="form-check">
                        <input asp-for="product.EnableSize" class="form-check-input" type="checkbox" value="" id="" />
                        <label asp-for="product.EnableSize" class="form-check-label" for=""> Enable Product Size </label>
                    </div>


                </div>

                <div class="mb-3 col-lg-6">
                    <label asp-for="product.CompanyId" class="form-label">company</label>
                    
                    <select class="form-select "
                            asp-for="product.CompanyId"
                            id="">
                        <option selected>Select one</option>
                        @foreach(var com in Model.companies)
                        {    
                        <option value="@com.Id">@com.Name</option>
                        }
                        
                    </select>
                    <span asp-validation-for="product.CompanyId" class="text-danger"></span>
                </div>

                <div class=" mb-3 col-lg-5 d-flex align-items-center mt-lg-4 ">
                    <input class="form-control" type="file" id="formFile">
                </div>

                <div class="col-lg-12 d-flex justify-content-center  ">

                    <button type="submit" class="btn btn-primary">Submit</button>

                </div>
            </form>

        </div>
    </div>
</div>