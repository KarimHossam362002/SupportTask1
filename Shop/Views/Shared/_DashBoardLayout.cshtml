<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!----======== CSS ======== -->
    <link rel="stylesheet" href="~/css/DashBoardStyle/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/DashBoardStyle/style.css">

    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">

    <title>Admin Dashboard Panel</title>
</head>
<body>

<nav>
    <div class="logo-name">
        <div class="logo-image">
            <img src="images/logo.png" alt="">
        </div>

        <span class="logo_name">MiniShop</span>
    </div>

    <div class="menu-items">
        <ul class="nav-links">
            <li>
              
                    @* <i class="uil uil-estate"></i> *@
                        <a asp-controller="DashBoard" asp-action="DashBoardIndex" class="link-name">Dashboard</a>
             
            </li>
            <li>
                   
                    @* <i class="uil uil-files-landscapes"></i> *@
                        <a asp-controller="DashBoard" asp-action="Create"  class="link-name">Add Product</a>
              
            </li>
            <li>
            
                    @* <i class="uil uil-chart"></i> *@
                    <a asp-controller="DashBoard" asp-action="ProductIndex" class="link-name">View Product</a>
                
            </li>
            <li>
              
                    @* <i class="uil uil-thumbs-up"></i> *@
                    <a asp-controller="DashBoard" asp-action="CreateBlog" class="link-name">Add Blog</a>
                
            </li>
            <li>
               
                     @* <i class="uil uil-comments"></i>  *@
                    <a asp-controller="DashBoard" asp-action="BlogIndex" class="link-name">View Blog</a>
                
            </li>
        </ul>

        <ul class="logout-mode">
            <li>
                <a href="#">
                    <i class="uil uil-signout"></i>
                    <span class="link-name">Logout</span>
                </a>
            </li>

            <li class="mode">
                <a href="#">
                    <i class="uil uil-moon"></i>
                    <span class="link-name">Dark Mode</span>
                </a>

                <div class="mode-toggle">
                    <span class="switch"></span>
                </div>
            </li>
        </ul>
    </div>
</nav>

<section class="dashboard">
    <div class="top">
        <i class="uil uil-bars sidebar-toggle"></i>

        <div class="search-box">
            <i class="uil uil-search"></i>
            <input type="text" placeholder="Search here...">
        </div>

        <img src="images/profile.jpg" alt="">
    </div>
        <div class="dash-content">
                @RenderBody()
        </div>
</section>
    
    <script src="~/js/DashBoardScript/bootstrap.min.js"></script>
    <script src="~/js/DashBoardScript/script.js"></script>
</body>
</html>